#include <mlx.h>
#include "../_hook.h"
#include "rt_driver.h"


int rt_keyup_hook(int key, void *data)
{
	t_screen *screen;

	screen = data;
	if (key == L_KEY)
	{
		rt_error_window("Luke jtm bb inferieur a trois");
	}
	if (screen->hooks.hook_function[RT_KEYUP])
		screen->hooks.hook_function[RT_KEYUP](key, screen->hooks.data[RT_KEYUP]);
	return (0);
}
